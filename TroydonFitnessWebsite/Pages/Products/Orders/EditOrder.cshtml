@page
@model TroydonFitnessWebsite.Pages.Products.Orders.EditOrderModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_ProductsLayout.cshtml";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
